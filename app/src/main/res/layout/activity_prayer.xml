        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/shape2"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

            <TextView
